{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"sourceMap": true,
	},
	"include": [
		"src/**/*",
	]
}